local UI = {}
UI.__index = UI

-- Services
local TweenService = game:GetService("TweenService")

function UI.new()
    local self = setmetatable({}, UI)
    
    -- Create UI elements
    self:CreateScreenGui()
    self:CreateBlurEffect()
    self:CreateMainFrame()
    self:CreateTopBar()
    self:CreateTabs()
    self:CreateScanTab()
    self:CreateViewerTab()
    
    -- Set up draggable behavior
    self:SetupDrag()
    
    -- Store a reference to all UI elements
    self.Elements = {
        ScreenGui = self.ScreenGui,
        MainFrame = self.MainFrame,
        BlurEffect = self.BlurEffect,
        TopBar = self.TopBar,
        SearchButton = self.SearchButton,
        CloseButton = self.CloseButton,
        MinimizeButton = self.MinimizeButton,
        ScanProgressInner = self.ScanProgressInner,
        ResultsFrame = self.ResultsFrame,
        StatusBarText = self.StatusBarText,
        TotalScriptsValue = self.TotalScriptsValue,
        KickFoundValue = self.KickFoundValue,
        ScanTab = self.ScanTab,
        ViewerTab = self.ViewerTab,
        ScanContainer = self.ScanContainer,
        ViewerContainer = self.ViewerContainer,
        CodeTextBox = self.CodeTextBox,
        LineNumbersText = self.LineNumbersText
    }
    
    return self
end

function UI:CreateScreenGui()
    self.ScreenGui = Instance.new("ScreenGui")
    self.ScreenGui.Name = "KickFinderPremium"
    self.ScreenGui.Parent = game:GetService("CoreGui")
    self.ScreenGui.ZIndexBehavior = Enum.ZIndexBehavior.Sibling
    self.ScreenGui.DisplayOrder = 999
end

function UI:CreateBlurEffect()
    self.BlurEffect = Instance.new("BlurEffect")
    self.BlurEffect.Size = 12
    self.BlurEffect.Enabled = true
    self.BlurEffect.Parent = game:GetService("Lighting")
end

function UI:CreateMainFrame()
    self.MainFrame = Instance.new("Frame")
    self.MainFrame.Name = "KickFinderUI"
    self.MainFrame.Parent = self.ScreenGui
    self.MainFrame.BackgroundColor3 = Color3.fromRGB(20, 20, 28)
    self.MainFrame.BorderSizePixel = 0
    self.MainFrame.Position = UDim2.new(0.5, -250, 0.5, -175)
    self.MainFrame.Size = UDim2.new(0, 500, 0, 350)
    self.MainFrame.AnchorPoint = Vector2.new(0.5, 0.5)
    self.MainFrame.ClipsDescendants = true
    
    local MainCorner = Instance.new("UICorner")
    MainCorner.CornerRadius = UDim.new(0, 12)
    MainCorner.Parent = self.MainFrame
    
    local MainStroke = Instance.new("UIStroke")
    MainStroke.Color = Color3.fromRGB(90, 90, 220)
    MainStroke.Thickness = 1.5
    MainStroke.ApplyStrokeMode = Enum.ApplyStrokeMode.Border
    MainStroke.Parent = self.MainFrame
    
    local MainGradient = Instance.new("UIGradient")
    MainGradient.Color = ColorSequence.new{
        ColorSequenceKeypoint.new(0, Color3.fromRGB(30, 30, 45)),
        ColorSequenceKeypoint.new(0.5, Color3.fromRGB(25, 25, 35)),
        ColorSequenceKeypoint.new(1, Color3.fromRGB(20, 20, 30))
    }
    MainGradient.Rotation = 45
    MainGradient.Parent = self.MainFrame
end

